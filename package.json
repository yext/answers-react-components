{
  "name": "@yext/answers-react-components",
  "version": "0.1.0-beta.6",
  "description": "",
  "author": "slapshot@yext.com",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "build": "rm -rf lib && tsc && npm run api-extractor && npm run generate-docs",
    "dev": "tsc --watch",
    "lint": "eslint .",
    "api-extractor": "api-extractor run --local --verbose",
    "generate-docs": "api-documenter markdown --input-folder temp --output-folder docs && rm -rf temp",
    "prepublishOnly": "npm run build",
    "test": "jest --passWithNoTests"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.14.5",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.3",
    "@types/jest": "^26.0.24",
    "@types/react": "^17.0.38",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "babel-jest": "^27.0.6",
    "eslint": "^7.30.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-react-hooks": "^4.3.0",
    "jest": "^27.0.6",
    "msw": "^0.36.8",
    "react": "^17.0.2",
    "typescript": "~4.4.3"
  },
  "peerDependencies": {
    "react": "^17.0.2"
  },
  "jest": {
    "bail": 0,
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "moduleDirectories": [
      "node_modules",
      "<rootDir>"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup/setup-env.ts"
    ],
    "testEnvironment": "jsdom",
    "testMatch": [
      "<rootDir>/tests/**/*.tsx"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/tests/setup/*"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "resetMocks": true
  },
  "dependencies": {
    "@css-modules-theme/core": "^2.3.0",
    "@microsoft/api-documenter": "^7.15.3",
    "@microsoft/api-extractor": "^7.19.4",
    "@restart/hooks": "^0.4.5",
    "@restart/ui": "^1.0.1",
    "@yext/analytics": "^0.2.0-beta.3",
    "@yext/answers-headless-react": "^1.1.0-beta.3",
    "classnames": "^2.3.1",
    "react-collapsed": "^3.3.0",
    "react-router-dom": "^5.3.0",
    "recent-searches": "^1.0.5",
    "uuid": "^8.3.2"
  }
}
